<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.github.vasiliz.vkclient.news.ui.views.CircleView
            android:id="@+id/avatar_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_group_or_profile_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:hint="test text"
                android:layout_margin="8dp"/>
            <TextView
                android:layout_margin="8dp"
                android:id="@+id/time_post_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:hint="test text"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/news_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:hint="test text"/>
    </LinearLayout>

</android.support.v7.widget.CardView>